@using Result_Submission_for_Dual_Examinar.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_loginLayout.cshtml";
}
<div class="login-box">
    <!-- /.login-logo -->
    <div class="login-box-body" style="margin-left: 40px; margin-top: 160px;border-radius: 10px;">
        @*<div class="login_logo"><img src="~/Content/img/Logo.png" alt="" /></div>*@
        @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="row col-md-6">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group has-feedback ">
                    <label class="control-label col-md-4"> User Name </label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-md-8" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    <label class="control-label col-md-4"> Password </label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-8" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    <label class="control-label col-md-8">  </label>
                    <button type="submit" class="btn btn-primary col-md-2">Sign In</button>
                </div>
                <div class="form-group has-feedback">
                    <label class="control-label col-md-6"> Don't have an account? </label>
                    <label class="control-label col-md-6" style="text-align:left">@Html.ActionLink("Register Here", "Register", "Home")</label>
                </div>
            </div>
        }
        <!-- /.social-auth-links -->
    </div>
</div>